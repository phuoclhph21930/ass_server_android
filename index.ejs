<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar" style="width: 100%;background-color: rgb(255, 123, 0);height: 50px;">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">WebSiteName</a>
      </div>
      <div class="navbar-header" >
        <h2 style="color: black;" href="javascript:;" class=" text-success font-weight-bold text-xs" data-id="" data-bs-toggle="modal" data-bs-target="#addProductModal" data-bs-whatever="@mdo">
          Thêm sản phẩm 
        </h2>
      </div>
      <ul class="nav  navbar-right">
        <li style="margin-right: 20px;"><h3 ><span class=""></span > Sign Up</h3></li>
        <li style="margin-right: 20px;"><h3 ><span class=" "></span> Login</h3></li>
      </ul>
    </div>
  </nav>
<table class="table">
  
  <thead>
  <tr>
    <th scope="col">Mã sản phẩm</th>
    <th scope="col">Tên sản phẩm</th>
    <th scope="col">Ảnh sản phẩm</th>
    <th scope="col">Màu sắc</th>
    <th scope="col">Loại sản phẩm</th>
    <th scope="col">Mã khách hàng</th>
    <th scope="col">Tên khách hàng</th>
    <th scope="col">Sửa xóa</th>
  </tr>
  </thead>
  <tbody>

  <% products.forEach(function(product,i){ %>
    <%- include('item', {product: product, i: i}); %>
  <% }); %>
  </tbody>
</table>


<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">add</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/addProduct" method="post">
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Tên sản phẩm</label>
            <input name="tensp" type="text" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Ảnh sản phẩm</label>
            <input name="anhsp" type="text" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Màu sắc</label>
            <input name="mau" type="text" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Loại sản phẩm</label>
            <input name="loaisp" type="text" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Mã khách hàng</label>
            <input name="makh" type="text" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Tên khách hàng</label>
            <input name="tenkh" type="text" class="form-control" id="recipient-name">
          </div>
         
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>

<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">edit</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="edit_product_form" method="post">
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Tên sản phẩm</label>
            <input name="tensp" type="text" class="form-control" id="tensp">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Ảnh sản phẩm </label>
            <input name="anhsp" type="text" class="form-control" id="anhsp">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Màu sản phẩm</label>
            <input name="mau" type="text" class="form-control" id="mau">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Loại sản phẩm </label>
            <input name="loaisp" type="text" class="form-control" id="loaisp">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Mã khách hàng </label>
            <input name="makh" type="text" class="form-control" id="makh">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Tên khách hàng</label>
            <input name="tenkh" type="text" class="form-control" id="tenkh">
          </div>
         

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" id="btn_cf_edit_product" class="btn btn-primary">Edit</button>
      </div>
    </div>
  </div>
</div>


<form id="delete_product_form" method="post"></form>

<script>
  var productsData = <%- JSON.stringify(products) %>

  var editProductModal = document.getElementById('editProductModal')
  var btn_cf_edit_product = document.getElementById('btn_cf_edit_product')
  var edit_product_form = document.getElementById('edit_product_form')

  var btn_delete_product = document.querySelectorAll('.btn_delete_product')
  var delete_product_form = document.getElementById('delete_product_form')


  var productId;
  var currentProduct;

  editProductModal.addEventListener('show.bs.modal', function (event) {
  var button = event.relatedTarget
  productId = button.getAttribute('data-id')
  currentProduct = productsData.find((product)=> product._id == productId)

  document.getElementById('tensp').value = currentProduct.tensp
  document.getElementById('anhsp').value = currentProduct.anhsp
  document.getElementById('mau').value = currentProduct.mau
  document.getElementById('loaisp').value = currentProduct.loaisp
  document.getElementById('makh').value = currentProduct.makh
  document.getElementById('tenkh').value = currentProduct.tenkh


  })

  btn_cf_edit_product.onclick = function(){
    edit_product_form.action = '/editProduct/'+productId
    edit_product_form.submit()
  }


  btn_delete_product.forEach(button => {
    button.addEventListener('click', handleClick);
  });

  function handleClick(event) {
    const button = event.target;
    productId = button.getAttribute('data-id')
    delete_product_form.action = '/deleteProduct/'+productId+'?_method=POST'
    delete_product_form.submit()
  }


</script>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>


